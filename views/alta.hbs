    <form class="formulario" id="formularioAlta" method="POST" action="/productos">
        <h1>Alta de Productos</h1>
        <input type="text" id="nombreProducto" name="nombreProducto" placeholder="Nombre del Producto" required>
        <input type="number" id="precioProducto" name="precioProducto" placeholder="Precio" required>
        <input type="number" id="stockProducto" name="stockProducto" placeholder="Stock" required>
        <textarea id="descripcionCortaProducto" name="descripcionCortaProducto" placeholder="Descripción Corta" required></textarea>
        <label>
            Envío sin cargo:
            <select id="envioSinCargoProducto" name="envioSinCargoProducto" required>
                <option value="si">Sí</option>
                <option value="no">No</option>
            </select>
        </label>
        <input type="text" id="fotoProducto" name="fotoProducto" placeholder="link de la imagen" required>
        <button type="submit">Agregar Producto</button>
    </form>

